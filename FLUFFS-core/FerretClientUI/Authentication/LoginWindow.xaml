<mui:ModernWindow x:Class="FerretClientUI.Authentication.LoginWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d" 
                  Width="400"
                  Title="Ferret - Login"
                  Style="{StaticResource BlankWindow}"
                  SizeToContent="Height">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="USERNAME" Style="{StaticResource Emphasis}" Margin="5,5,5,0" Foreground="{DynamicResource Accent}" Opacity="0.3"/>
        <TextBox DockPanel.Dock="Top" x:Name="txtUserName" Margin="5,0,5,5"/>
        <TextBlock DockPanel.Dock="Top" Text="PASSWORD" Style="{StaticResource Emphasis}" Margin="5,5,5,0" Foreground="{DynamicResource Accent}" Opacity="0.3"/>
        <PasswordBox DockPanel.Dock="Top" x:Name="pwbPasswordBox" Margin="5,0,5,5"/>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <mui:ModernButton Content="Login" Style="{StaticResource BiggerButton}" IconData="F1 M 22.1698,36.4215L 25.3366,36.4215L 25.3367,31.6711C 25.3367,24.6745 31.0085,19.0027 38.0051,19.0027C 45.0017,19.0027 50.6735,24.6745 50.6735,31.6711L 45.9228,31.6711C 45.9228,27.2982 42.3779,23.7533 38.0051,23.7533C 33.6322,23.7533 30.0873,27.2982 30.0873,31.6711L 30.0873,36.4216L 53.8408,36.4215L 53.8409,57.008L 22.1698,57.008L 22.1698,36.4215 Z" Click="ModernButton_Click_1"/>
            <mui:ModernButton Content="Cancel" Style="{StaticResource BiggerButton}" IconData="F1 M 26.9166,22.1667L 37.9999,33.25L 49.0832,22.1668L 53.8332,26.9168L 42.7499,38L 53.8332,49.0834L 49.0833,53.8334L 37.9999,42.75L 26.9166,53.8334L 22.1666,49.0833L 33.25,38L 22.1667,26.9167L 26.9166,22.1667 Z" Click="ModernButton_Click"/>
        </StackPanel>
    </DockPanel>
</mui:ModernWindow>
